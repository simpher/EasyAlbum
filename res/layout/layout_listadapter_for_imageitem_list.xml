<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_bar_height"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/ivDeleteItem"
        android:layout_paddingRight="@dimen/default_gap"
        android:layout_paddingLeft="@dimen/default_gap"
        android:gravity="center_vertical"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:text="@string/app_name" />
    
    <ImageView
        android:id="@+id/ivDeleteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ivEditItem"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_menu_delete"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name" />
    
    <ImageView
        android:id="@+id/ivEditItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/default_gap"
        android:layout_marginLeft="@dimen/default_gap"
        android:src="@android:drawable/ic_menu_add"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name" />

</RelativeLayout>
