<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cqu.easyalbum"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cqu.easyalbum.ActivityAlbum"
            android:label="@string/labe_my_album" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.cqu.easyalbum.ActivityImageItem"
            android:label="@string/labe_image_list" />
        
        <activity android:name="com.cqu.filepicker.FilePicker"
            android:label="@string/labe_add_image" />
        
        <activity android:name="com.cqu.imageviewer.SimpleImageViewer"
            android:label="@string/labe_view_image" />
    </application>

</manifest>
